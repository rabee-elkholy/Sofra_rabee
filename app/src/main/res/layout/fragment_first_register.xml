<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:text="بيانات المطعم"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_fragment_edt_restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableEnd="@drawable/ic_person"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="إسم المطعم"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <EditText
                android:id="@+id/login_fragment_edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableEnd="@drawable/ic_email"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="البريد الاليكتروني"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <EditText
                android:id="@+id/login_fragment_edt_delivery_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:digits="1234567890"
                android:drawableEnd="@drawable/ic_timer"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="مدة التوصيل (د)"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <EditText
                android:id="@+id/login_fragment_Edt_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:cursorVisible="false"
                android:drawableStart="@drawable/ic_arrow_down"
                android:drawableEnd="@drawable/ic_home"
                android:drawablePadding="@dimen/_6sdp"
                android:focusable="false"
                android:hint="المدينة"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <EditText
                android:id="@+id/login_fragment_edt_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:cursorVisible="false"
                android:drawableStart="@drawable/ic_arrow_down"
                android:drawableEnd="@drawable/ic_home"
                android:drawablePadding="@dimen/_6sdp"
                android:focusable="false"
                android:hint="الحي"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel"
                android:visibility="gone" />

            <EditText
                android:id="@+id/login_fragment_edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableEnd="@drawable/ic_lock"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="كلمة المرور"
                android:inputType="textPassword"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <EditText
                android:id="@+id/login_fragment_edt_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableEnd="@drawable/ic_lock"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="إعادة كلمة المرور"
                android:inputType="textPassword"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />


            <EditText
                android:id="@+id/login_fragment_edt_minimum_charger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:digits="1234567890"
                android:drawableEnd="@drawable/ic_money_off"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="الحد الأدني للطلب (جنيه)"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <EditText
                android:id="@+id/login_fragment_edt_delivery_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:digits="1234567890"
                android:drawableEnd="@drawable/ic_cost"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="تكلفة التوصيل (جنيه)"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <Button
                android:id="@+id/login_fragment_btn_confirm"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_30sdp"
                android:background="@drawable/shape_btn1"
                android:elevation="4dp"
                android:text="متابعة"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />
        </LinearLayout>

        <include
            android:id="@+id/register_fragment_pb_progress"
            layout="@layout/progress_bar" />

    </RelativeLayout>


</ScrollView>