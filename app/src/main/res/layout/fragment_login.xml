<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.fragments.userCycle.login.LoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/sofra_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="تسجيل الدخول"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_fragment_til_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:drawableEnd="@drawable/ic_email"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="البريد الاليكتروني"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />


            <EditText
                android:id="@+id/login_fragment_til_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableEnd="@drawable/ic_lock"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="كلمة المرور"
                android:inputType="textPassword"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <TextView
                android:id="@+id/login_fragment_tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:text="هل نسيت كلمة المرور؟"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/login_fragment_btn_login"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_30sdp"
                android:background="@drawable/shape_btn1"
                android:elevation="4dp"
                android:text="دخول"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/login_fragment_tv_create_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:text="@string/create_account"
                android:textColor="@color/gray" />

        </LinearLayout>

        <include
            android:id="@+id/login_fragment_pb_progress"
            layout="@layout/progress_bar" />
    </RelativeLayout>

</ScrollView>