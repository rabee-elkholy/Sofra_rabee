<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/client_register_fragment_civ_client_photo"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_30sdp"
                android:background="@drawable/ic_add_a_photo_black"/>

            <EditText
                android:id="@+id/client_register_fragment_edt_client_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableEnd="@drawable/ic_person"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="الإسم"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <EditText
                android:id="@+id/client_register_fragment_edt_client_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableEnd="@drawable/ic_email"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="البريد الاليكتروني"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <EditText
                android:id="@+id/client_register_fragment_edt_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableEnd="@drawable/ic_call"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="الهاتف"
                android:inputType="phone"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <EditText
                android:id="@+id/client_register_fragment_Edt_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:cursorVisible="false"
                android:drawableStart="@drawable/ic_arrow_down"
                android:drawableEnd="@drawable/ic_home"
                android:drawablePadding="@dimen/_6sdp"
                android:focusable="false"
                android:hint="المدينة"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <EditText
                android:id="@+id/client_register_fragment_edt_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:cursorVisible="false"
                android:drawableStart="@drawable/ic_arrow_down"
                android:drawableEnd="@drawable/ic_home"
                android:drawablePadding="@dimen/_6sdp"
                android:focusable="false"
                android:hint="الحي"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel"
                android:visibility="gone" />

            <EditText
                android:id="@+id/client_register_fragment_edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableEnd="@drawable/ic_lock"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="كلمة المرور"
                android:inputType="textPassword"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <EditText
                android:id="@+id/client_register_fragment_edt_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableEnd="@drawable/ic_lock"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="إعادة كلمة المرور"
                android:inputType="textPassword"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:theme="@style/TextLabel" />

            <Button
                android:id="@+id/client_register_fragment_btn_login"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_30sdp"
                android:background="@drawable/shape_btn1"
                android:elevation="4dp"
                android:text="تسجيل"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />
        </LinearLayout>

        <include
            android:id="@+id/client_register_fragment_pb_progress"
            layout="@layout/progress_bar" />

    </RelativeLayout>


</ScrollView>